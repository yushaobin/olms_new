<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.neuedu.olms.mapper.TokenMapper">
   <!-- 添加教师信息 -->
   <insert id="add" parameterType="Token">
   	 insert into tb_token(token,user_id) values(#{token},#{userId})
   </insert>
   
   <update id="update" parameterType="Token">
   		update tb_token 
   		<set>
   			<if test="token != null">
   				token = #{token},
   			</if>
   			<if test="loginTime != null">
   				login_time = #{loginTime},
   			</if>
   		</set>
   		where user_id = #{userId}
   </update>
   
   <select id="getTokenByTokenStr" resultType="Token">
   	 select token,user_id,login_time from tb_token where token = #{token}
   </select>
   
   <select id="getTokenByUserId" resultType="Token">
   		select token,user_id,login_time from tb_token where user_id = #{userId}
   </select>
</mapper>